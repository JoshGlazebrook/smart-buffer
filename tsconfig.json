{
   "compileOnSave": true,
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "sourceMap": true,
        "moduleResolution": "node",
        "outDir": "build",
        "watch": false,
        "declaration": false,
        "removeComments":false,
        "noImplicitAny": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      ".idea",
      "build",
      "typings",
      "test"
    ]
}